{
  "name": "arce-appium-driver",
  "version": "0.0.1",
  "description": "Experimental driver for appium.",
  "main": "dist/ArceAppiumDriver.js",
  "bin": {},
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src",
    "build": "rimraf dist/ && tsc --target es6 && npm run copy-public",
    "start": "nodemon dist/index.js",
    "test": "c8 --reporter=lcov mocha --require ts-node/register --timeout 15000 'test/**/*spec.{ts,tsx}'",
    "test-json-cov": "c8 --reporter=json-summary mocha --require ts-node/register --timeout 15000 'test/**/*spec.{ts,tsx}'",
    "copy-public": "copyfiles -u 1 src/**/*.html src/**/*.css dist/"
  },
  "c8": {
    "include": "src",
    "exclude": [
      "**/*.spec.{ts,tsx,js}"
    ]
  },
  "keywords": [
    "appium",
    "webdriver",
    "arce",
    "webview",
    "e2e"
  ],
  "author": "Andreas Schoch",
  "license": "MIT",
  "dependencies": {
    "@appium/base-driver": "^8.7.3",
    "appium-support": "^2.55.0",
    "arce": "^0.4.0"
  },
  "peerDependencies": {
    "appium": "^2.0.0-beta.40"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.60",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "8.22.0",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "repository": "github:andreas-schoch/arce-appium-driver",
  "appium": {
    "driverName": "arce-driver",
    "automationName": "ARCE",
    "platformNames": [
      "windows"
    ],
    "mainClass": "ArceAppiumDriver"
  }
}
